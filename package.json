{
  "name": "peoje.01",
  "version": "0.1.1",
  "scripts": {
    "clean": "rimraf dist",
    "styles": "sass src/styles/style.scss dist/style.css --no-source-map && postcss dist/style.css -o dist/style.min.css",
    "scripts": "esbuild src/scripts/main.js --bundle --outfile=dist/main.js",
    "html": "eleventy",
    "build": "npm-run-all clean styles scripts html",
    "start": "eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.20.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^10.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.77.0"
  }
}
