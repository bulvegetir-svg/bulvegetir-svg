{
  "name": "peoje.01",
  "version": "0.1.1",
  "description": "Tek CSS + Tek JS ile SEO‑uyumlu statik e‑ticaret web sitesi",
  "main": "dist/script.min.js",
  "scripts": {
    "clean": "rimraf dist",
    "styles": "sass src/styles:dist --no-source-map && postcss dist/*.css -o dist/style.min.css",
    "scripts": "rollup -c",
    "html": "eleventy && cpx \"src/assets/**/*\" dist/assets && cpx \"src/data/products.json\" dist/data",
    "build": "npm-run-all clean styles scripts html",
    "dev": "npm-run-all --parallel watch:styles watch:scripts serve",
    "watch:styles": "sass --watch src/styles:dist",
    "watch:scripts": "rollup -c -w",
    "serve": "eleventy --serve"
  },
  "keywords": [
    "ecommerce",
    "static-site",
    "seo",
    "single-css",
    "single-js"
  ],
  "author": "Your Name <you@example.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.1",
    "cpx": "^1.5.0",
    "eleventy": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "rollup": "^4.20.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.79.5",
    "rimraf": "^5.0.5",
    "husky": "^9.0.0"
  },
  "dependencies": {}
}
